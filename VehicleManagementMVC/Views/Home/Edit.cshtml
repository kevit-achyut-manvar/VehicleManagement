@model ServiceResponse<UpdateVehicleDto>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Data.Id" />
            <div class="form-group">
                <label asp-for="Data.CompanyName" class="control-label"></label>
                <input asp-for="Data.CompanyName" class="form-control" />
                <span asp-validation-for="Data.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.ModelName" class="control-label"></label>
                <input asp-for="Data.ModelName" class="form-control" />
                <span asp-validation-for="Data.ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.RTONumber" class="control-label"></label>
                <input asp-for="Data.RTONumber" class="form-control" />
                <span asp-validation-for="Data.RTONumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.Class" class="control-label"></label>
                <select asp-for="@Model.Data.Class" class="form-control" asp-items="Html.GetEnumSelectList<VehicleClass>()"></select>
                <span asp-validation-for="Data.Class" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
