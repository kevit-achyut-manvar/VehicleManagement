@model ServiceResponse<List<GetVehicleDto>>

@{
    ViewData["Title"] = "Vehicle Management System";
}

<h1>Vehicle List</h1>

<p>
    <a asp-action="Create">Add Vehicle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data[0].ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data[0].RTONumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data[0].Class)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RTONumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
